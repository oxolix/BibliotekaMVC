@model BibliotekaMvc.Models.Author

@{
    ViewData["Title"] = "Details";
}

<h1>Informacje o autorze</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AutorImie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AutorImie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AutorNazwisko)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AutorNazwisko)
        </dd>
    </dl>
</div>
<div>
	<p><h5>Książki napisane przez tego autora:</h5></p>
    <ul>
        @foreach (var book in Model.Books)
        {
            <li>@book.Tytul</li>
        }
    </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
