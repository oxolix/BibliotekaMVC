@model IEnumerable<BibliotekaMvc.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Autorzy</h1>

<p>
    <a asp-action="Create">Dodaj autora</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AutorImie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutorNazwisko)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AutorImie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorNazwisko)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
