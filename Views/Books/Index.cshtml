@model IEnumerable<BibliotekaMvc.Models.Book>


@{
    ViewData["Title"] = "Index";
}

<h1>Książki</h1>

<div>@await Component.InvokeAsync("BookCount")</div>

<p>
    <a asp-action="Create">Dodaj nową</a>
</p>
<br />
<form asp-controller="Books" asp-action="Index" method="get">
    <p>
        Wyszukaj książkę: <input type="text" name="SearchString" />
		<label>  Gatunek  </label>
		<select asp-items="ViewBag.BookInfoId" name="bookInfoId">
			<option value="">Wszystkie</option>
		</select>

		<input type="submit" value="Szukaj" />
	</p>
    
		
</form>






<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookInfo.Gatunek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FullAutorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
