    ViewData["Title"] = "Szczegóły użytkownika";
}

<h1>Szczegółowe informacje o użytkowniku</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwisko)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwisko)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Miasto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address.Miasto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Ulica)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Ulica)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.NrDomu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.NrDomu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.NrTelefonu)
