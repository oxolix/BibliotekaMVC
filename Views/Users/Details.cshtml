<div>
    <p><h5>Książki wypożyczone:</h5></p>
    <ol>
        @foreach (var book in Model.BookUsers)
        {
            <li>
                @book.Id
                <br/>
                @book.DataWyp
                <br/>
                @book.DataOd
            </li>
        }
    </ol>
</div>

<div>
